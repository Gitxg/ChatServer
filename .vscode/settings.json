{ //当前工作区的一些设置，工作区的设置会覆盖掉用户区的设置
    "explorer.confirmDelete": false,
    "C_Cpp.errorSquiggles": "Disabled",
    "C_Cpp.default.enableConfigurationSquiggles": false,
    "code-runner.executorMap": {
        //按下 右键然后点击运行时的命令
        "cpp": "cd $dir && g++ -std=c++11 $fileName -lmuduo_net -lmuduo_base -lpthread -o out && $dir/out",
    },
    "code-runner.languageIdToFileExtensionMap": {
        "bat": ".bat",
        "powershell": ".ps1",
        "typescript": ".ts"
    },
    //全局配置
    "workbench.colorTheme": "Default Dark+", // 主题
    "workbench.activityBar.visible": true, // 左侧工具栏是否可见
    "breadcrumbs.enabled": false, // 开启 vscode 文件路径导航
    "files.trimTrailingWhitespace": true, // 删除行尾空格
    "files.defaultLanguage": "cpp", // ctrl+N新建文件后默认的语言
    "editor.tabSize": 4, // tab 大小为 4 个空格
    "editor.wordWrap": "off", // 编辑器自动换行
    "editor.formatOnSave": true, // 保存的时候自动格式化
    "editor.formatOnType": true, // 输入时就进行格式化，默认触发字符较少，分号可以触发
    "editor.snippetSuggestions": "top",
    "code-runner.showRunIconInEditorTitleMenu": false,
    "code-runner.runInTerminal": true,
    "debug.onTaskErrors": "debugAnyway",
    "C_Cpp.files.exclude": {
        "**/.vscode": true
    },
    "workbench.editorAssociations": {
        "*.json": "default"
    },
    "C_Cpp.commentContinuationPatterns": [
        "/**"
    ],
    "workbench.editor.enablePreview": true,
    "notebook.showFoldingControls": "always",
    //cmake的路径在哪里
    "cmake.cmakePath": "/usr/bin/cmake",
    "files.associations": {
        "functional": "cpp",
        "limits": "cpp",
        "type_traits": "cpp",
        "valarray": "cpp",
        "tuple": "cpp",
        "cctype": "cpp",
        "clocale": "cpp",
        "cmath": "cpp",
        "csignal": "cpp",
        "cstdarg": "cpp",
        "cstddef": "cpp",
        "cstdio": "cpp",
        "cstdlib": "cpp",
        "cstring": "cpp",
        "ctime": "cpp",
        "cwchar": "cpp",
        "cwctype": "cpp",
        "array": "cpp",
        "atomic": "cpp",
        "strstream": "cpp",
        "*.tcc": "cpp",
        "bitset": "cpp",
        "chrono": "cpp",
        "codecvt": "cpp",
        "complex": "cpp",
        "condition_variable": "cpp",
        "cstdint": "cpp",
        "deque": "cpp",
        "forward_list": "cpp",
        "list": "cpp",
        "unordered_map": "cpp",
        "unordered_set": "cpp",
        "vector": "cpp",
        "exception": "cpp",
        "algorithm": "cpp",
        "ratio": "cpp",
        "system_error": "cpp",
        "fstream": "cpp",
        "future": "cpp",
        "initializer_list": "cpp",
        "iomanip": "cpp",
        "iosfwd": "cpp",
        "iostream": "cpp",
        "istream": "cpp",
        "memory": "cpp",
        "mutex": "cpp",
        "new": "cpp",
        "ostream": "cpp",
        "numeric": "cpp",
        "sstream": "cpp",
        "stdexcept": "cpp",
        "streambuf": "cpp",
        "thread": "cpp",
        "cfenv": "cpp",
        "cinttypes": "cpp",
        "utility": "cpp",
        "typeindex": "cpp",
        "typeinfo": "cpp",
        "string": "cpp",
        "*.ipp": "cpp"
    }
}